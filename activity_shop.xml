<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankActivity">

    <TextView
        android:id="@+id/shop_label"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Guild Shop"
        android:textSize="64sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="top|center"
        android:text="username"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shop_label" />

    <TextView
        android:id="@+id/money_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="32dp"
        android:gravity="center"
        android:text="money"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_label" />

    <TextView
        android:id="@+id/wares_label"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Select items for purchase."
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/money_label" />

    <Button
        android:id="@+id/potion_button"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="POTION"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wares_label" />

    <Button
        android:id="@+id/ration_button"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="RATIONS"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/potion_button" />

    <Button
        android:id="@+id/weapon_button"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="WEAPON"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ration_button" />

    <Button
        android:id="@+id/armor_label"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="ARMOR"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/weapon_button" />

    <TextView
        android:id="@+id/potion_count"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="76dp"
        android:gravity="center"
        android:text="count"
        android:textSize="32dp"
        app:layout_constraintStart_toEndOf="@+id/potion_button"
        app:layout_constraintTop_toBottomOf="@+id/wares_label" />

    <TextView
        android:id="@+id/ration_count"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="count"
        android:textSize="32dp"
        app:layout_constraintStart_toEndOf="@+id/ration_button"
        app:layout_constraintTop_toBottomOf="@+id/potion_count" />

    <TextView
        android:id="@+id/weapon_count"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="count"
        android:textSize="32dp"
        app:layout_constraintStart_toEndOf="@+id/weapon_button"
        app:layout_constraintTop_toBottomOf="@+id/ration_count" />

    <TextView
        android:id="@+id/armor_count"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginStart="44dp"
        android:layout_marginTop="24dp"
        android:gravity="center"
        android:text="count"
        android:textSize="32dp"
        app:layout_constraintStart_toEndOf="@+id/armor_label"
        app:layout_constraintTop_toBottomOf="@+id/weapon_count" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginBottom="8dp"
        android:text="Buy Now"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:layout_editor_absoluteX="0dp" />

</androidx.constraintlayout.widget.ConstraintLayout>