<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/admin_label"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Admin View"
        android:textSize="64sp"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/guildmaster_label"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_margin="16dp"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:text="Welcome GuildMaster!"
        android:textSize="32sp"
        app:layout_constraintTop_toBottomOf="@+id/admin_label" />

    <TextView
        android:id="@+id/main_display"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guildmaster_label"
        android:scrollbars="vertical"/>

</androidx.constraintlayout.widget.ConstraintLayout>