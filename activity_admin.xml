<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminActivity">

    <TextView
        android:id="@+id/guildmaster_label"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:gravity="center"
        android:text="Welcome GuildMaster!"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/main_display"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guildmaster_label"/>

    <TextView
        android:id="@+id/select_label"
        android:layout_width="171dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="Select user to remove: "
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/main_display" />

    <EditText
        android:id="@+id/user_select"
        android:layout_width="106dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:inputType="text"
        android:hint="enter username"
        android:textSize="12dp"
        app:layout_constraintStart_toEndOf="@+id/select_label"
        app:layout_constraintTop_toBottomOf="@+id/main_display" />

    <Button
        android:id="@+id/delete_button"
        android:layout_width="133dp"
        android:layout_height="49dp"
        android:gravity="center"
        android:text="delete"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/user_select"
        app:layout_constraintTop_toTopOf="@+id/user_select" />

    <TextView
        android:id="@+id/newuser_label"
        android:layout_width="411dp"
        android:layout_height="34dp"
        android:layout_marginTop="28dp"
        android:gravity="center"
        android:text="Add new memeber: "
        android:textSize="22dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/select_label" />

    <EditText
        android:id="@+id/name_select"
        android:layout_width="177dp"
        android:layout_height="55dp"
        android:gravity="center"
        android:hint="name"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/newuser_label" />

    <EditText
        android:id="@+id/password_select"
        android:layout_width="177dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:hint="password"
        android:inputType="textPassword"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/name_select" />

    <EditText
        android:id="@+id/role_select"
        android:layout_width="177dp"
        android:layout_height="55dp"
        android:layout_marginStart="4dp"
        android:gravity="center"
        android:hint="role"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_select" />

    <Button
        android:id="@+id/add_button"
        android:layout_width="171dp"
        android:layout_height="155dp"
        android:gravity="center"
        android:text="Add new guild member"
        android:textSize="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/password_select"
        app:layout_constraintTop_toBottomOf="@+id/newuser_label" />

</androidx.constraintlayout.widget.ConstraintLayout>